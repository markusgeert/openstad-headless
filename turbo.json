{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"//#check": {
			"inputs": [
				"**/*.ts",
				"**/*.tsx",
                "biome.json",
				"!**/node_modules",
				"!**/dist",
				"!**/dist-dts",
				"!**/.next",
				"!**/.turbo",
				"!**/apos-build"
			]
		},
		"//#fix": {
			"inputs": [
				"**/*.ts",
				"**/*.tsx",
                "biome.json",
				"!**/node_modules",
				"!**/dist",
				"!**/dist-dts",
				"!**/.next",
				"!**/.turbo",
				"!**/apos-build"
			]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"lint": {},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
