{
  "name": "openstad-headless",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "create-docker-config": "node ./scripts/create-docker-config.js",
    "setup": "node ./scripts/setup-all.js",
    "start": "concurrently npm:start:*",
    "dev": "concurrently npm:dev:*",

    "dev:api": "cd apps/api-server && nodemon server.js",
    "build:api": "npm run build-packages --prefix ./apps/api-server",
    "start:api": "npm run start --prefix ./apps/api-server",

    "dev:auth": "cd apps/auth-server && nodemon app.js",
    "build:auth": "npm run build --prefix ./apps/auth-server",
    "start:auth": "npm run start --prefix ./apps/auth-server",

    "dev:image": "cd apps/image-server && nodemon server.js",
    "start:image": "npm run start --prefix ./apps/image-server",

    "dev:admin": "npm run dev --prefix ./apps/admin-server",
    "build:admin": "npm run build --prefix ./apps/admin-server",
    "start:admin": "npm run start --prefix ./apps/admin-server",

    "init-databases": "node ./scripts/init-databases.js"
  },
  "engines": {
    "node": "^18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openstad/openstad-headless.git"
  },
  "author": "OpenStad",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/openstad/openstad-headless/issues"
  },
  "homepage": "https://github.com/openstad/openstad-headless#readme",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "react-leaflet": "^4.2.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "concurrently": "^9.0.1",
    "mysql2": "^3.11.3",
    "prettier": "3.0.3"
  }
}
